<MainWidgetsLog>
    size_hint: None,None
    GridLayout:
        cols: 2
        pos: self.parent.pos
        size: self.parent.size
        login_username_text_input: login_username
        login_password_text_input: login_password
        Label:
            text: 'Username'
        TextInput:
            id: login_username
            multiline: False
        Label:
            text: 'Password'
        TextInput:
            id: login_password
            multiline: False
            password: True
        Label:
            text: ''
        Button:
            id: login_login
            text: 'Login'
            on_release: app.verify_credentials(self.parent.login_username_text_input.text,self.parent.login_password_text_input.text)
        Label:
            text: ''
        Button:
            id: login_create
            text: 'Create Account'
            on_release: app.root.current = 'createacctscreen'

